<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.estilotech.controledospais"
    android:versionCode="1"
    android:versionName="ControleDosPais_1">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/main_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/main_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name="com.estilotech.controledospais.HomeActivity"
            android:label="Controle dos Pais"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen"
            android:launchMode="singleTask"
            android:stateNotNeeded="true">

            <intent-filter>

                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>

        <activity
            android:name=".ResetLauncherActivity"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".CadastroSenhaActivity"
            android:label="Cadastro de Senha" />
        <activity android:name=".ConfiguracoesActivity"
            android:label="Configurações" />
        <activity android:name=".ConfereSenhaActivity"
            android:label="Controle de Acesso"/>
        <activity android:name=".AppsLiberadosActivity"
            android:label="Aplicativos Liberados" />
    </application>

</manifest>